<!DOCTYPE html>
<html>

<head>
    <title>
        DÃ©tails de Pokemon
        <%= name %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        * {
            box-sizing: border-box;
            font-size: 20px;
        }
        
        body {
            background: #0c1c3e;
        }
        
        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            width: 60%;
            margin: 50px auto;
            color: #fbfcfc;
        }
    </style>
</head>

<body>
    <script type="text/javascript">
        async function favori() {
            const name = document.querySelector("h1").innerHTML
            const taille = document.querySelector("#taille").innerHTML
            await fetch(`http://localhost:3000/pokemon/` + name, {
                method: "POST",
                body: JSON.stringify({
                    name,
                    taille
                })
            })
        }
    </script>
    <div class="container">
        <img src=<%=picture %> alt="">
        <h1>
            <%= name %>
        </h1>
        <p id="taille">
            <%= taille %>
        </p>
        <button type="submit" id="favoris" onclick="favori()" class="btn btn-success">Ajouter aux favoris </button>
    </div>

</body>

</html>